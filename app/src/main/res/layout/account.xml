<?xml version="1.0" encoding="utf-8"?>

<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/newaccbg"
    xmlns:app="http://schemas.android.com/apk/res-auto">
    <EditText
        android:id="@+id/name"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="210dp"
        android:layout_marginLeft="90dp"
        android:layout_marginRight="70dp"
        android:layout_alignParentLeft="true"
        android:layout_alignParentRight="true"
        android:textSize="25dp"
        android:textColorHint="#AAA8A8"
        android:textColor="#AAA8A8"
        android:hint="Name"
        android:textAlignment="center"/>
<LinearLayout
    android:layout_width="match_parent"
    android:layout_height="300dp"
    android:background="@color/white"
    android:layout_marginTop="280dp"
    android:orientation="vertical">
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="5dp"
        android:orientation="horizontal">
        <ImageView
            android:id="@+id/imageView"
            android:layout_width="26dp"
            android:layout_height="26dp"
            android:layout_marginTop="10dp"
            android:layout_marginLeft="15dp"
            app:srcCompat="@drawable/accphone" />
    <EditText
        android:id="@+id/mb"
        android:layout_width="321dp"
        android:layout_height="wrap_content"
        android:layout_alignParentLeft="true"
        android:layout_alignParentRight="true"
        android:layout_marginLeft="20dp"
        android:layout_marginTop="2dp"
        android:layout_marginRight="40dp"
        android:textColorHint="#AAA8A8"
        android:textColor="#AAA8A8"
        android:hint="Contact Number"
        android:textSize="20dp" />
</LinearLayout>
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="5dp"
        android:orientation="horizontal">
        <ImageView
            android:id="@+id/imageView1"
            android:layout_width="26dp"
            android:layout_height="26dp"
            android:layout_marginTop="10dp"
            android:layout_marginLeft="15dp"
            app:srcCompat="@drawable/accemail" />
        <EditText
            android:id="@+id/ed"
            android:layout_width="321dp"
            android:layout_height="wrap_content"
            android:layout_alignParentLeft="true"
            android:layout_alignParentRight="true"
            android:layout_marginLeft="20dp"
            android:layout_marginTop="5dp"
            android:layout_marginRight="40dp"
            android:textColorHint="#AAA8A8"
            android:hint="Email id"
            android:textColor="#AAA8A8"
            android:textSize="20dp" />
    </LinearLayout>
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="5dp"
        android:orientation="horizontal">
        <ImageView
            android:id="@+id/imageView2"
            android:layout_width="26dp"
            android:layout_height="26dp"
            android:layout_marginTop="10dp"
            android:layout_marginLeft="15dp"
            app:srcCompat="@drawable/acclocality" />
        <EditText
            android:id="@+id/area"
            android:layout_width="321dp"
            android:layout_height="wrap_content"
            android:layout_alignParentLeft="true"
            android:layout_alignParentRight="true"
            android:layout_marginLeft="20dp"
            android:layout_marginTop="5dp"
            android:layout_marginRight="40dp"
            android:textColorHint="#AAA8A8"
            android:textColor="#AAA8A8"
            android:hint="Area/Locality"
            android:textSize="20dp" />
    </LinearLayout>
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="5dp"
        android:orientation="horizontal">
        <ImageView
            android:id="@+id/imageView3"
            android:layout_width="26dp"
            android:layout_height="26dp"
            android:layout_marginTop="10dp"
            android:layout_marginLeft="15dp"
            app:srcCompat="@drawable/acccity" />
        <EditText
            android:id="@+id/city"
            android:layout_width="321dp"
            android:layout_height="wrap_content"
            android:layout_alignParentLeft="true"
            android:layout_alignParentRight="true"
            android:layout_marginLeft="20dp"
            android:layout_marginTop="5dp"
            android:layout_marginRight="40dp"
            android:textColorHint="#AAA8A8"
            android:textColor="#AAA8A8"
            android:hint="City"
            android:textSize="20dp" />
    </LinearLayout>
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="5dp"
        android:orientation="horizontal">
        <ImageView
            android:id="@+id/imageView4"
            android:layout_width="26dp"
            android:layout_height="26dp"
            android:layout_marginTop="10dp"
            android:layout_marginLeft="15dp"
            app:srcCompat="@drawable/accstate" />
        <EditText
            android:id="@+id/state"
            android:layout_width="321dp"
            android:layout_height="wrap_content"
            android:layout_alignParentLeft="true"
            android:layout_alignParentRight="true"
            android:layout_marginLeft="20dp"
            android:layout_marginTop="5dp"
            android:layout_marginRight="40dp"
            android:textColorHint="#AAA8A8"
            android:textColor="#AAA8A8"
            android:hint="State"
            android:textSize="20dp" />
    </LinearLayout>

</LinearLayout>
    <Button
        android:id="@+id/save"
        android:layout_width="145dp"
        android:layout_height="41dp"
        android:layout_alignParentLeft="true"
        android:layout_alignParentRight="true"
        android:layout_marginLeft="132dp"
        android:layout_marginTop="600dp"
        android:layout_marginRight="132dp"
        android:background="@drawable/accbuttonbg"
        android:text="Save"
        android:textColor="@color/black"
        android:textSize="25dp" />

</RelativeLayout>